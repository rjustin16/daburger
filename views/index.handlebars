<h1>Eat da burger!</h1>

<h2>Burgers ready to eat:</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{!-- <li>{{burger_name}}</li> --}}
  {{> burger devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already eaten:</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{!-- <li>{{burger_name}}</li> --}}
  {{> burger devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<h2>Order a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
    <button type="submit">Order</button>
  </div>
</form>